-#  This file is app/views/index.html.haml
%h1 All games

%ul
  - @games.each do |game|
    %li
      = link_to game.title, game_path(game)
      = link_to 'Delete', game_path(game), :method => :delete
      
%h1 Create New Game

= form_tag games_path do

  = label :game, :title, 'Title'
  = text_field :game, :title

  = submit_tag 'Save Changes'